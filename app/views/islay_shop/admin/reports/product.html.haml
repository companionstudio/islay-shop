- render :partial => 'islay/admin/reports/nav'
- sub_header('Shop', path(:shop_reports))
- sub_header('Products', path(:product_reports))
- sub_header(@product.name)

= content(:class => 'inset') do
  %div#order-graphs.report-cell
    %h3 Product Over Time

    %table.series-graph
      %thead
        %tr
          %th Day
          %th Value
          %th Volume

      %tbody
        - @series.each do |entry|
          %tr
            %th= entry['day']
            %td= entry['value']
            %td= entry['volume']

  = column(8) do
    %div.report-cell
      %h3 SKUs

      %table#skus-summary
        %thead
          %tr
            %th SKU
            %th.sorted Value
            %th Volume

        %tbody
          - @skus.each do |entry|
            %tr
              %td= link_to(entry['id'], path(:sku_report, :product_id => params[:id], :id => entry['id']))
              %td= format_money(entry['value'])
              %td= entry['quantity']

    %div.report-cell
      %h3 Orders

      %table#orders-summary
        %thead
          %tr
            %th Reference
            %th SKUs
            %th Qty.
            %th Value
            %th.sorted Created At

        %tbody
          - @orders.each do |entry|
            %tr
              %td= link_to("#{entry['reference']} - #{entry['name']}", path(:order, :id => entry['id']))
              %td= entry['sku_names']
              %td= entry['quantity']
              %td= format_money(entry['item_total'])
              %td= entry['created_at']

  = column(4) do
    %div.report-cell
      %h3 Totals

      %h4 Revenue
      %p.value= format_money(@totals['total_value'])

      %h4 Volume
      %p.value= @totals['total_volume']

    %div#bests.report-cell
      %h3 Best

      %div.day
        %h4 Day

        %h5 Revenue
        %p.value
          = format_money(@totals['best_day_revenue'])
          %em= format_day(@totals['best_day_for_revenue'])

        %h5 Volume
        %p.value
          = @totals['best_day_volume']
          %em= format_day(@totals['best_day_for_volume'])

      %div.month
        %h4 Month

        %h5 Revenue
        %p.value
          = format_money(@totals['best_month_revenue'])
          %em= format_month(@totals['best_month_for_revenue'])

        %h5 Volume
        %p.value
          = @totals['best_month_volume']
          %em= format_month(@totals['best_month_for_volume'])
