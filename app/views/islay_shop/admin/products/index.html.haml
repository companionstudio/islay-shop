- filter_nav(:products, 'All')
- filter_nav(:products, 'Published', 'published')
- filter_nav(:products, 'Unpublished', 'unpublished')

- sort_nav(:products, 'Name')
- sort_nav(:products, 'Created', 'created_at')
- sort_nav(:products, 'Updated', 'updated_at')

= content do
  %table(cellpadding=0 cellspacing=0)
    %thead
      %tr
        %th.boolean Published
        %th.boolean For Sale
        %th Product
        %th.indicator Stock Level
        %th Updated At
    %tbody
      - @products.each do |product|
        %tr
          %td.boolean
            %span(class="boolean #{product.published?}")
              %span= friendly_bool(product.published?)
          %td.boolean
            %span(class="boolean #{product.for_sale?}")
              %span= friendly_bool(product.for_sale?)
          %td
            = link_to(product.name, path(product), :class => 'title')
          %td.indicator
            %span(class="indicator #{product.stock_level_status}")
              = product.friendly_stock_level_status
          %td
            %span.time= product.updated_at
            by #{product.updater.name}


