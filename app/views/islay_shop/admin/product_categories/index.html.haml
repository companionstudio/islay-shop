- sub_header('Categories')

- filter_nav(:product_categories, 'All')
- filter_nav(:product_categories, 'Published', 'published')
- filter_nav(:product_categories, 'Unpublished', 'unpublished')

= form_tag(path(:position, :product_categories), :method => :put) do
  = content do
    %table(cellpadding=0 cellspacing=0)
      %thead
        %tr
          %th.select
            = check_box_tag('all')
          %th.boolean Published
          %th Category
          %th Stock Level
          %th.meta Updated At

      %tbody
        = render :partial => 'category', :collection => @product_categories, :locals => {:level => 0, :published => true}

  = footer do
    = new_button('Category', :product_category)
    = position_buttons

