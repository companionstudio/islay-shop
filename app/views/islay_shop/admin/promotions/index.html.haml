- sort_nav(:products, 'Name')
- sort_nav(:products, 'Created', 'created_at')
- sort_nav(:products, 'Updated', 'updated_at')

= content do
  %table{:cellpadding => 0, :cellspacing => 0}
    %thead
      %tr
        %th Active
        %th Name
        %th Start
        %th End
        %th Updated At

    %tbody
      - @promotions.each do |promotion|
        %tr
          %td= promotion.active?
          %td= link_to(promotion.name, path(promotion))
          %td= promotion.start_at
          %td= promotion.end_at
          %td= promotion.updated_at

= footer do
  = new_button('Promotion', :promotion)
