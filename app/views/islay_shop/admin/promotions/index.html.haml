- filter_nav(:promotions, 'Current')
- filter_nav(:promotions, 'Finished', 'finished')
- filter_nav(:promotions, 'All', 'all')

- sort_nav(:orders, 'Updated')
- sort_nav(:orders, 'Status', 'status')
- sort_nav(:orders, 'Name', 'name')

= content do
  %table{:cellpadding => 0, :cellspacing => 0}
    %thead
      %tr
        %th Active
        %th Name
        %th Start
        %th End
        %th Updated At

    %tbody
      - @promotions.each do |promotion|
        %tr
          %td= promotion.active?
          %td= link_to(promotion.name, path(promotion))
          %td= promotion.start_at
          %td= promotion.end_at
          %td= promotion.updated_at

= footer do
  = new_button('Promotion', :promotion)
