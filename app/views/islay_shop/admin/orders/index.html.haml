- sub_header('Recent Updates')

- sort_nav(:orders, 'Updated')
- sort_nav(:orders, 'Status', 'status')
- sort_nav(:orders, 'Name', 'name')

= content do
  %ul#summary
    %li
      %span.value.indicator.neutral 20
      %span.key to Bill
    %li
      %span.value.indicator.neutral 2
      %span.key to Pack
    %li
      %span.value.indicator.neutral 2
      %span.key to Ship

    %li.expiring
      %span.value.indicator.warning 1
      %span.key Expiring Soon

  %table(cellpadding=0 cellspacing=0)
    %thead
      %tr
        %th Status
        %th Name
        %th Total
        %th Updated At

    %tbody
      - @orders.each do |order|
        %tr
          %td
            %span.indicator= order.status
          %td
            = link_to(order.name, path(order), :class => 'title')
            %span.reference= order.reference
            %span.summary= order.items_summary
          %td
            = order.formatted_total
          %td
            %span.time= order.updated_at
            by #{order.updater_name}

  = footer do
    %ul#pagination
      %li.previous
        %a Previous
      %li.count
        Page 1 of 3
      %li.next
        %a Next
